<Window x:Class="This_Is_War.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:This_Is_War"
        mc:Ignorable="d"
        Title="This is war" Height="450" Width="800" MinHeight="400" MinWidth="600">
    <Window.Resources>
        <BitmapImage UriSource="back1.png" x:Key="Back"/>

        <Style TargetType="Image" x:Key="cardEffect">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="30"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label FontSize="30" Grid.Column="2" Content="{Binding Score}"
                   Name="p1Score"/>
            <Label FontSize="30" Grid.Column="4" Content="{Binding Score}"
                   Name="p2Score"/>
        </Grid>
        <Grid Grid.Row="1" Margin="0,50,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Name="p1Panel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Label Width="100" Height="150" MouseDown="War">
                        <Image Source="{StaticResource Back}" Style="{StaticResource cardEffect}"/>
                    </Label>
                    <Label Name="p1Number" HorizontalContentAlignment="Center" 
                       Content="{Binding Number}"/>
                </StackPanel>
                <Image Grid.Column="1" Name="p1Image" Width="100" Height="150" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Column="1" Name="p2Panel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Name="p2Image" Width="100" Height="150" VerticalAlignment="Top"/>
                <StackPanel Grid.Column="1">
                    <Label Width="100" Height="150" MouseDown="War">
                        <Image Source="{StaticResource Back}" Style="{StaticResource cardEffect}"/>
                    </Label>
                    <Label Name="p2Number" HorizontalContentAlignment="Center" 
                       Content="{Binding Number}"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Margin="20" Width="100" Height="30" Click="Button_Click">Reset</Button>
            <Button Margin="20,0,20,20" Width="100" Height="30" Grid.Column="1" VerticalAlignment="Bottom"
                    Click="Button_Click_1">Skip to end</Button>
            <CheckBox Margin="20" Width="100" Height="30" Grid.Column="3" Name="WarBox">Show wars</CheckBox>
        </Grid>
    </Grid>
</Window>
